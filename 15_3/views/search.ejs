<!DOCTYPE html>
<html lang="en">
  <%- include ('./partials/header.ejs') %> 
  <body>
    <div class="container text-center">
      <div class="row">
        <% for(let i=0; i< result.length; i++){%>
        <div class="col-md-4 mb-2">
          <div class="card" style="width: 18rem">
            <img src="/assets/image.jpg" class="card-img-top" alt="..." />
            <div class="card-body">
              <h5 class="card-title"><%= result[i].name%></h5>
              <p class="card-text"><%= result[i].color%></p>
              <p class="card-text"><%= result[i].size%></p>
              <p class="card-text"><%= result[i].price%></p>
              <a href="/profile/<%=result[i].uid%>"" class="btn btn-primary">Purchase</a>
            </div>
          </div>
        </div>

        <% } %>
      </div>
    </div>
  </body>
</html>
